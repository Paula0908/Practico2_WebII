/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "target": "ES2020",        // suficiente para Angular + PromiseSettledResult
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],  // <- clave para que no falte PromiseSettledResult
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
